{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node", "vite/client"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "#mobile/assets/*": ["apps/mobile/src/assets/*"],
      "#mobile/components/*": ["apps/mobile/src/app/components/*"],
      "#mobile/src/*": ["apps/mobile/src/*"],
      "#site/app/*": ["apps/site/src/app/*"],
      "#site/assets/*": ["apps/site/src/assets/*"],
      "#site/public/*": ["apps/site/src/public/*"],
      "@okampus/api/bll": ["libs/api/bll/src/index.ts"],
      "@okampus/api/dal": ["libs/api/dal/src/index.ts"],
      "@okampus/api/shards": ["libs/api/shards/src/index.ts"],
      "@okampus/assets/*": ["libs/assets/src/*"],
      "@okampus/shared/consts": ["libs/shared/consts/src/index.ts"],
      "@okampus/shared/dtos": ["libs/shared/dtos/src/index.ts"],
      "@okampus/shared/enums": ["libs/shared/enums/src/index.ts"],
      "@okampus/shared/graphql": ["libs/shared/graphql/src/index.ts"],
      "@okampus/shared/types": ["libs/shared/types/src/index.ts"],
      "@okampus/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@okampus/site/shards": ["libs/site/shards/src/index.ts"],
      "@okampus/ui/atoms": ["libs/ui/atoms/src/index.ts"],
      "@okampus/ui/hooks": ["libs/ui/hooks/src/index.ts"],
      "@okampus/ui/molecules": ["libs/ui/molecules/src/index.ts"],
      "@okampus/ui/organisms": ["libs/ui/organisms/src/index.ts"],
      "@okampus/ui/styles/*": ["libs/ui/styles/src/*"],
      "@okampus/ui/templates": ["libs/ui/templates/src/index.ts"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
