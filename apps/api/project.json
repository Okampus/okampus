{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/api"
      },
      "configurations": {
        "production": {
          "mode": "production"
        }
      }
    },
    "migration:create": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": ["MIKRO_ORM_MIGRATION=create node dist/apps/api/main.mjs"]
      }
    },
    "migration:up": {
      "executor": "nx:run-commands",
      "dependsOn": ["migration:create"],
      "options": {
        "commands": ["sh apps/api/migrate.sh"]
      }
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development",
          "hmr": true
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run api:ts-check", "nx run api:ts-check-spec", "nx run api:eslint", "nx run api:prettier"]
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run api:eslint --fix", "prettier --write apps/api"],
        "parallel": false
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --pretty --noEmit -p apps/api/tsconfig.app.json"]
      }
    },
    "ts-check-spec": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --pretty --noEmit -p apps/api/tsconfig.spec.json"]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint apps/api --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"]
      }
    },
    "prettier": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["prettier --check apps/api"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:api", "type:app"]
}
