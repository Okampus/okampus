{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "parserOptions": {
    "sourceType": "module",
    "project": ["./apps/api/tsconfig.app.json", "./apps/api/tsconfig.spec.json"]
  },
  "overrides": [
    { "files": ["database/**/*.ts"], "rules": { "unicorn/filename-case": "off" } },
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
