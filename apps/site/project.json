{
  "name": "site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/site/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/site"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "site:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "site:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "site:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          "nx run site:ts-check",
          "nx run site:ts-check-spec",
          "nx run site:eslint",
          "nx run site:prettier",
          "nx run site:stylelint"
        ]
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run site:eslint --fix", "prettier --write apps/site", "nx run site:stylelint --fix"],
        "parallel": false
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --pretty --noEmit -p apps/site/tsconfig.app.json"]
      }
    },
    "ts-check-spec": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --pretty --noEmit -p apps/site/tsconfig.spec.json"]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint apps/site --ext .ts,.tsx --cache --cache-location node_modules/.cache/.eslintcache"]
      }
    },
    "prettier": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["prettier --check apps/site"]
      }
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "stylelint apps/site/**/*.{css,scss} --cache --cache-location node_modules/.cache/.stylelintcache --allow-empty-input"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/apps/site"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/site"
      }
    }
  },
  "tags": ["scope:site", "type:app"]
}
