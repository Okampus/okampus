{
  "name": "strapi",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/strapi/src",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm i && pnpm run develop"],
        "cwd": "apps/strapi"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --pretty -p apps/strapi/tsconfig.json"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run strapi:ts-check", "nx run strapi:eslint"]
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --pretty --noEmit -p apps/strapi/tsconfig.json"]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint apps/strapi --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"]
      }
    }
  },
  "tags": ["scope:strapi", "type:app"]
}
