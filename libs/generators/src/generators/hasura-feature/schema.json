{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "hasura-feature",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Feature name (same as the entity name, case-insensitive)",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "subfolder": {
      "type": "string",
      "description": "Subfolder to place the feature in"
    },
    "folder": {
      "type": "string",
      "description": "Folder to place the feature in"
    },
    "plural": {
      "type": "string",
      "description": "Plural name of the feature"
    },
    "expect-rels": {
      "type": "string",
      "description": "Expected relationships for create"
    },
    "expect-ids": {
      "type": "string",
      "description": "Plural id relationships for create"
    },
    "tenant-scoped": {
      "type": "boolean",
      "description": "Whether the feature entity is tenant-scoped",
      "default": true
    },
    "pkColumns": {
      "type": "array",
      "description": "Primary key columns",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["name"]
}
