{
  "name": "site-shards",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/site/shards/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/site/shards",
        "main": "libs/site/shards/src/index.ts",
        "tsConfig": "libs/site/shards/tsconfig.lib.json",
        "assets": ["libs/site/shards/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          {
            "command": "nx run api:ts-check"
          },
          {
            "command": "nx run api:eslint"
          }
        ]
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --pretty --noEmit -p libs/site/shards/tsconfig.lib.json"
          }
        ]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "eslint libs/site/shards --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"
          }
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/site/shards/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:site", "type:shard", "layer:*"]
}
