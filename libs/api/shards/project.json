{
  "name": "api-shards",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/api/shards/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/api/shards",
        "main": "libs/api/shards/src/index.ts",
        "tsConfig": "libs/api/shards/tsconfig.lib.json",
        "assets": ["libs/api/shards/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run api-shards:ts-check", "nx run api-shards:eslint"]
      }
    },
    "ts-check": {
      "command": "tsc --pretty --noEmit -p libs/api/shards/tsconfig.lib.json"
    },
    "eslint": {
      "command": "eslint libs/api/shards --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"
    }
  },
  "tags": ["scope:api", "type:shard", "layer:*"]
}
