{
  "name": "api-bll",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/api/bll/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/api/bll",
        "main": "libs/api/bll/src/index.ts",
        "tsConfig": "libs/api/bll/tsconfig.lib.json",
        "assets": ["libs/api/bll/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          {
            "command": "nx run api-bll:ts-check"
          },
          {
            "command": "nx run api-bll:eslint"
          }
        ]
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --pretty --noEmit -p libs/api/bll/tsconfig.lib.json"
          }
        ]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "eslint libs/api/bll --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"
          }
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/api/bll/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:api", "type:layer", "layer:bll"]
}
