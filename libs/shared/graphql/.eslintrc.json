{
  "extends": ["../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "parserOptions": {
    "sourceType": "module",
    "project": ["./libs/shared/graphql/tsconfig.lib.json", "./libs/shared/graphql/tsconfig.spec.json"]
  },
  "rules": {
    "unicorn/filename-case": "off",
    "unicorn/no-abusive-eslint-disable": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/ban-ts-comment": "off"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
