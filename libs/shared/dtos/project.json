{
  "name": "shared-dtos",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/dtos/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/dtos",
        "main": "libs/shared/dtos/src/index.ts",
        "tsConfig": "libs/shared/dtos/tsconfig.lib.json",
        "assets": ["libs/shared/dtos/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run shared-dtos:ts-check", "nx run shared-dtos:eslint"]
      }
    },
    "ts-check": {
      "command": "tsc --pretty --noEmit -p libs/shared/dtos/tsconfig.lib.json"
    },
    "eslint": {
      "command": "eslint libs/shared/dtos --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/dtos/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:shared", "type:shard", "layer:*"]
}
