{
  "name": "shared-i18n",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/i18n/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/i18n",
        "main": "libs/shared/i18n/src/index.ts",
        "tsConfig": "libs/shared/i18n/tsconfig.lib.json",
        "assets": ["libs/shared/i18n/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          {
            "command": "nx run shared-i18n:ts-check"
          },
          {
            "command": "nx run shared-i18n:eslint"
          }
        ]
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --pretty --noEmit -p libs/shared/i18n/tsconfig.lib.json"
          }
        ]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "eslint libs/shared/i18n --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"
          }
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/i18n/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:shared", "type:const", "layer:*"]
}
