{
  "name": "ui-atoms",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/atoms/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ui/atoms",
        "main": "libs/ui/atoms/src/index.ts",
        "tsConfig": "libs/ui/atoms/tsconfig.lib.json",
        "assets": ["libs/ui/atoms/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          {
            "command": "nx run api:ts-check"
          },
          {
            "command": "nx run api:eslint"
          }
        ]
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --pretty --noEmit -p libs/ui/atoms/tsconfig.lib.json"
          }
        ]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "eslint libs/ui/atoms --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"
          }
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui/atoms/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:shared", "type:ui", "layer:atom"]
}
