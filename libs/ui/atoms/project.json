{
  "name": "ui-atoms",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/atoms/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ui/atoms",
        "main": "libs/ui/atoms/src/index.ts",
        "tsConfig": "libs/ui/atoms/tsconfig.lib.json",
        "assets": ["libs/ui/atoms/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          "nx run ui-atoms:ts-check",
          "nx run ui-atoms:eslint",
          "nx run ui-atoms:prettier",
          "nx run site:stylelint"
        ]
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run ui-atoms:eslint --fix", "prettier --write libs/ui/atoms", "nx run site:stylelint --fix"],
        "parallel": false
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --pretty --noEmit -p libs/ui/atoms/tsconfig.lib.json"]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint libs/ui/atoms --ext .ts,.tsx --cache --cache-location node_modules/.cache/.eslintcache"]
      }
    },
    "prettier": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["prettier --check libs/ui/atoms"]
      }
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "stylelint libs/ui/atoms/**/*.{css,scss} --cache --cache-location node_modules/.cache/.stylelintcache --allow-empty-input"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui/atoms/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:shared", "type:ui", "layer:atom"]
}
