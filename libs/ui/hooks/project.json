{
  "name": "ui-hooks",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/hooks/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ui/hooks",
        "main": "libs/ui/hooks/src/index.ts",
        "tsConfig": "libs/ui/hooks/tsconfig.lib.json",
        "assets": ["libs/ui/hooks/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run ui-hooks:ts-check", "nx run ui-hooks:eslint", "nx run ui-hooks:prettier"]
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run ui-hooks:eslint --fix", "prettier --write libs/ui/hooks"],
        "parallel": false
      }
    },
    "ts-check": {
      "command": "tsc --pretty --noEmit -p libs/ui/hooks/tsconfig.lib.json"
    },
    "eslint": {
      "command": "eslint libs/ui/hooks --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"
    },
    "prettier": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["prettier --check libs/ui/hooks"]
      }
    }
  },
  "tags": ["scope:shared", "type:ui", "layer:*"]
}
