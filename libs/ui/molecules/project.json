{
  "name": "ui-molecules",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/molecules/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ui/molecules",
        "main": "libs/ui/molecules/src/index.ts",
        "tsConfig": "libs/ui/molecules/tsconfig.lib.json",
        "assets": ["libs/ui/molecules/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": ["nx run ui-molecules:ts-check", "nx run ui-molecules:eslint"]
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --pretty --noEmit -p libs/ui/molecules/tsconfig.lib.json"]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint libs/ui/molecules --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui/molecules/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:shared", "type:ui", "layer:molecule"]
}
