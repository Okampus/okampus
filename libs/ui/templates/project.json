{
  "name": "ui-templates",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/templates/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ui/templates",
        "main": "libs/ui/templates/src/index.ts",
        "tsConfig": "libs/ui/templates/tsconfig.lib.json",
        "assets": ["libs/ui/templates/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          "nx run ui-templates:ts-check",
          "nx run ui-templates:eslint",
          "nx run ui-templates:prettier",
          "nx run site:stylelint"
        ]
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          "nx run ui-templates:eslint --fix",
          "prettier --write libs/ui/templates",
          "nx run site:stylelint --fix"
        ],
        "parallel": false
      }
    },
    "ts-check": {
      "command": "tsc --pretty --noEmit -p libs/ui/templates/tsconfig.lib.json"
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "eslint libs/ui/templates --ext .ts,.tsx --cache --cache-location node_modules/.cache/.eslintcache"
        ]
      }
    },
    "prettier": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["prettier --check libs/ui/templates"]
      }
    },
    "stylelint": {
      "command": "stylelint libs/ui/templates/**/*.{css,scss} --cache --cache-location node_modules/.cache/.stylelintcache --allow-empty-input"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui/templates/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:shared", "type:ui", "layer:template"]
}
