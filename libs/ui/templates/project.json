{
  "name": "ui-templates",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/templates/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ui/templates",
        "main": "libs/ui/templates/src/index.ts",
        "tsConfig": "libs/ui/templates/tsconfig.lib.json",
        "assets": ["libs/ui/templates/*.md"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          {
            "command": "nx run api:ts-check"
          },
          {
            "command": "nx run api:eslint"
          }
        ]
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --pretty --noEmit -p libs/ui/templates/tsconfig.lib.json"
          }
        ]
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "eslint libs/ui/templates --ext .ts --cache --cache-location node_modules/.cache/.eslintcache"
          }
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui/templates/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:shared", "type:ui", "layer:template"]
}
